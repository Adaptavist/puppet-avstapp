<%-unless @avst_wizard_properties['license'] or @base_url or @instance_dir or @avst_wizard_properties['instance_name'] or @avst_wizard_properties['database_url'] or @avst_wizard_properties['database_user'] or @avst_wizard_properties['database_pass'] or @avst_wizard_properties['admin_user'] or @avst_wizard_properties['admin_full_name'] or @avst_wizard_properties['admin_email'] or @avst_wizard_properties['admin_pass'] %>
    <% fail "Required wizard params not present. Make sure license, database_url, database_user, database_pass, admin_user, admin_full_name, admin_email, admin_pass, instance_name are present."%>
<%-end-%>

## Bamboo
base_url: <%=@base_url%>
install_dir: <%=@instance_dir%>
<%@avst_wizard_properties.keys.each do |k|  -%>
<%if k == 'license'-%>
license: |
<%@avst_wizard_properties[k].split("\n").each do |l|-%>
    <%="#{l}"%>
<%-end-%>
<%-else-%>
<%="#{k}: #{@avst_wizard_properties[k]}"%>
<%-end-%>
<%-end-%>